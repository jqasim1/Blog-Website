<%- include("partials/header") %>

<h1>Home</h1>
<p><%= homeStart %></p>

<% newPosts.forEach(function(element) { %>
  <h1><%= element.title %></h1>
  <% if(element.body.length > 100) { %>
     <p> <%= element.body.substring(0,100) + "..." %> <a href="post/<%= element.title %>">Read More</a> </p>
<% } else { %>
      <p> <%= element.body %> </p>
<% } %>

<% }); %>

<%- include("partials/footer") %>
